<body>
	<header id="header">
		<!--header-->


		<div class="header-middle">
			<!--header-middle-->
			<div class="container">
				<div style="padding-bottom: 10px" class="row">
					<div class="col-sm-4">
						<div class="logo pull-left">
							<a><img style="width: 80px; height:80px" src="images/logo.png" alt="" /></a>
						</div>
						
					</div>
					<div style="padding-top: 20px" class="col-sm-8">
						<div class="shop-menu pull-right">
							<ul class="nav navbar-nav">
								<li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart"></i> Cart</a></li>

								@if (User.Identity?.IsAuthenticated ?? false)
								{
									<li><a href="checkout.html"><i class="fa-solid fa-bag-shopping"></i>Oder</a></li>
									<li><a href="#"><i class="fa fa-user"></i> Hi @User.Identity.Name</a></li>
									<li><a asp-controller="Account" asp-action="Logout"> <i class="fa fa-lock"></i> Logout </a></li>
									
								}
								else
								{
									<li><a asp-controller="Account" asp-action="Login"><i class="fa fa-lock"></i>Login</a></li>
								}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-middle-->

		<div class="header-bottom">
			<!--header-bottom-->
			<div class="container">
				<div class="row">
					<div class="col-sm-9">
						<div class="mainmenu pull-left">
							<ul class="nav navbar-nav collapse navbar-collapse">
								<li><a asp-controller="Home" class="active">Home</a></li>
								<li class="dropdown">
									<a asp-controller="Product">Shop</a>
								</li>
								<li class="dropdown">
									<a asp-controller="Category">Category<i class="fa fa-angle-down"></i></a>
									<ul role="menu" class="sub-menu">
										<li><a>Functional Sofas (Sofa đa năng)</a></li>
										<li><a>Stylish Sofas (Sofa phong cách)</a></li>
										<li><a>Luxury & Leather Sofas (Sofa cao cấp & da)</a></li>
										<li><a>Compact & Affordable Sofas (Sofa nhỏ gọn & giá rẻ)</a></li>	
									</ul>
								</li>
								<li class="dropdown">
									<a asp-controller="Brand">Brand<i class="fa fa-angle-down"></i></a>
