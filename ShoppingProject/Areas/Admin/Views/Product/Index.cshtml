@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>list</h2>
<a asp-action="Create" asp-controller="Product">Add Product</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Quantity</th>
            <th scope="col">Product Sold</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Product Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <th>fuck</th>
                <td>@item.Name</td>
                <td><b>@item.Quantity</b><br/><a asp-controller="Product" asp-action="AddQuantity" asp-route-Id="@item.Id">Add Quantity</a></td>
                <td>@item.Sold</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("#,##0 VNĐ")</td>
                <td> <img src="~/media/products/@item.Image" width="120px" height="150px" /> </td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
                    @* <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" 
                    asp-controller="Product" asp-route-Id="@item.Id">Delete</a> *@
                    <form asp-action="Delete" asp-controller="Product" method="post" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm confirmDeletion">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
@section Scripts{
    <script>
        let table = new DataTable('#myTable');
    </script>
}
