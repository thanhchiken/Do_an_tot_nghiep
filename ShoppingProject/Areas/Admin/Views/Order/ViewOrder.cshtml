@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Order Details";
    decimal total = 0; // Store total amount
    decimal subtotal = 0;
}
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Order Details</title>
    </head>
    <body>
        <h2>list order</h2>

        <table class="table">
            <thead>
                <tr>
                <th>Id</th>
                <th>Order Code</th>
                <th>UserName</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    subtotal = item.Quantity * item.Price; //số lượng * giá
                    total += subtotal;
                    <tr>
                        <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                        <td>@item.Id</td>
                        <td>@item.OrderCode</td>
                        <td>@item.UserName</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Price.ToString("#,##0 VNĐ")</td>
                        <td>@item.Quantity</td>
                        <td>@subtotal.ToString("#,##0 VNĐ")</td>

                    </tr>
                }
                <tr>
                    <td>Total:</td>
                    <td>shipping cost : @ViewBag.ShippingCost.ToString("#,##0 VNĐ")</td>
                    <td>Tổng: @total.ToString("#,##0 VNĐ")</td>
                    <td colspan="3"></td>
                    <td>
                        <select class="form-control select-update-order">
                            <option value="0">trạng thái</option>
                            <option value="1"> đơn hàng mới</option>
                            <option value="2"> đã xử lý</option>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
    </body>
</html>

